<body>
    <%-include('include/header')-%>

        <!-- Content -->
        <li class="nav-item dropdown mx-5">
            <button type="button" class="btn text-light px-5 fs-4">Categories</button>
            <button type="button" class="btn text-light dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown"
                aria-expanded="false">
                <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <% for(let i=0;i<category.length;i++){ %>
                    <li><a class="dropdown-item categories" href="/singleProductCategory?name=<%= category[i].name %>">
                            <%= category[i].name %>
                        </a></li>
                    <% } %>
            </ul>
        </li>
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <video class="video-player__viewer" style="height: 60vh; width: 100%; object-fit: cover;"
                        data-video-player--video-player-target="video"
                        data-action="click->video-player--video-player#togglePlay timeupdate->video-player--video-player#progressUpdate loadedmetadata->video-player--video-player#setVideoDuration"
                        poster="https://mixkit.imgix.net/videos/preview/mixkit-elegant-man-in-suit-checks-the-time-on-his-luxurious-28888-0.jpg?q=80&amp;auto=format%2Ccompress"
                        src="https://assets.mixkit.co/videos/preview/mixkit-elegant-man-in-suit-checks-the-time-on-his-luxurious-28888-large.mp4"
                        controlslist="nodownload" disablepictureinpicture="" autoplay="" loop="" muted="">
                </div>

                <!-- <div class="carousel-item text-center">
                    <img src="/img/home1.png" alt="" style="height: 60vh; width: 100%; object-fit: cover;">
                </div> -->

                <div class="carousel-item">
                    <video src="/img/pexels-case-11899562 (540p).mp4" class="" alt="..."
                        style="height: 60vh; width: 100%; object-fit: cover;" autoplay loop muted>
                        Your browser does not support the video tag.
                    </video>
                </div>


            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        </div>

        <div class="text-center mt-5">
            <h1 class="text-light ">Recently Added Products</h1>
        </div>

        <div class="row mt-3 container mx-auto border-2 rounded-5 py-3">
            <% for(let i=0;i<4;i++) {%>
                <div class="col-md-3 rounded-5 border-bottom border-top border-2 rounded-5 py-3">
                    <div class="text-center pt-5">
                        <a href="/userProductDetail?productId=<%= recentProducts[i]._id %>">
                            <img class="img-fluid rounded-3 bg-light" src="<%= recentProducts[i].images[0] %>"
                                width="220" alt="<%= recentProducts[i].productName %>">
                        </a>
                    </div>
                    <div class="about text-center pt-3" style="color: rgb(255, 255, 255);">
                        <h5>
                            <%= recentProducts[i].brand %>
                        </h5>
                        <span>â‚¹<%= recentProducts[i].price.toFixed(2) %></span>
                    </div>
                </div>
                <% } %>
        </div>
        <div class="qoute pt-2 container-fluid">
            <img src="/img/homequote.png" class="" alt="" style="width: 100%; height: 100%;">
        </div>
        <%-include('include/footer')-%>
</body>

